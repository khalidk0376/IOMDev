<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_is_Mandatory</fullName>
    <active>false</active>
    <description>First Name is mandatory for Contact</description>
    <errorConditionFormula>AND(ISBLANK( FirstName ), ISPICKVAL( Legacy_CRM_Instance__c , &quot;Payment Portal&quot;))</errorConditionFormula>
    <errorMessage>First Name is required.</errorMessage>
</ValidationRule>
